{
  "name": "@interoperating.app/desktop",
  "private": true,
  "version": "0.0.0",
  "description": "",
  "main": "build/main.js",
  "scripts": {
    "build": "rimraf ./lib/ && tsc -b",
    "prestart": "npm run build",
    "start": "concurrently -k \"build-electron -d\" \"wait-on build/.build-electron-done && electron .\"",
    "test": "NODE_NO_WARNINGS=1 ava"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@interoperating.app/common": "workspace:*",
    "bengo-common": "workspace:*",
    "menubar": "~9.2.1"
  },
  "devDependencies": {
    "typescript": "^4.7.4",
    "@types/node": "^10.9.4",
    "rimraf": "^2.6.2",
    "ava": "~4.3.1",
    "ts-node": "~10.9.1",
    "electron": "~20.0.3",
    "build-electron": "~1.0.5",
    "concurrently": "~7.3.0",
    "wait-on": "~6.0.1"
  },
  "ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	}
}
